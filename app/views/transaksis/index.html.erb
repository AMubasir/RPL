<p id="notice"><%= notice %></p>

<h1>Listing Transaksis</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Pelanggan</th>
      <th>Jenis Mobil</th>
      <th>Nama Mobil</th>
      <th>Tanggal sewa</th>
      <th>Tanggal kembali</th>
      <th>Lama</th>
      <th>Total Bayar</th>
      <th>Uang muka</th>
      <th>Sisa Bayar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transaksis.each do |transaksi| %>
      <tr>
        <td><%= transaksi.id %></td>
        <td><%= transaksi.pelanggan.nama %></td>
        <td><%= transaksi.mobil.jenis_mobil.jenis %></td>
        <td><%= transaksi.mobil.nama %></td>
        <td><%= transaksi.tanggal_sewa %></td>
        <td><%= transaksi.tanggal_kembali %></td>
        <td><%= transaksi.lama %></td>
        <td><%= total_bayar = transaksi.mobil.harga * transaksi.lama %></td>
        <td><%= transaksi.uang_muka %></td>
        <td><%= total_bayar = total_bayar - transaksi.uang_muka %></td>
        <td><%= link_to 'Show', transaksi %></td>
        <td><%= link_to 'Edit', edit_transaksi_path(transaksi) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Transaksi', new_transaksi_path %>